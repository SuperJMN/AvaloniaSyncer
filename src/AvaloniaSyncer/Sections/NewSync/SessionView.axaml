	</UserControl.Resources>

	<Panel>
		<DockPanel>
			<newSync:TopBar DockPanel.Dock="Top" />
			<ListBox ItemsSource="{Binding SyncActions}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="newSync:SyncItemViewModel">
                        <StackPanel Orientation="Horizontal">
							<TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding Source}" />
                            <TextBlock Text="{Binding Destination}" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <CheckBox IsEnabled="False" IsChecked="{Binding Synced}" />
                                <PathIcon Foreground="{StaticResource SystemErrorTextColor}" IsVisible="{Binding Error, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Data="{StaticResource Warning}" Width="24" ToolTip.Tip="{Binding Error}"  />
                                <Button x:Name="ToggleButton" IsVisible="{Binding Error, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                    <PathIcon Foreground="{StaticResource SystemErrorTextColor}" IsVisible="{Binding Error, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Data="{StaticResource Warning}" Width="24" ToolTip.Tip="{Binding Error}"  />
                                    <Button.Flyout>
                                        <Flyout>
                                            <TextBlock TextWrapping="Wrap" Text="{Binding Error}" />
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                            </StackPanel>
                            <ProgressBar VerticalAlignment="Stretch" IsVisible="{Binding IsSyncing^}"
                                         Height="20" Margin="4" Maximum="1"
                                         Value="{Binding Progress^.Value}" />
                            <StackPanel>
                                <Button Content="Sync" IsVisible="{Binding !IsSyncing^}" Margin="4" Command="{Binding Sync}" />
                                <Button Content="Stop" IsVisible="{Binding IsSyncing^}" ToolTip.Tip="Syncs pending items" Command="{Binding Stop}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
		</DockPanel>
		<avaloniaProgressRing:ProgressRing Width="80"
                               Height="80"
							   IsActive="{Binding IsBusy^}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource SystemAccentColor}"
                               Margin="10,20,0,0"/>
	</Panel>

</UserControl>
