<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaSyncer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSyncer.Views.PluginConfiguratorView"
             x:DataType="viewModels:PluginConfiguratorViewModel">
	<StackPanel Grid.IsSharedSizeScope="True" Spacing="8">
		<TextBlock Text="{Binding Name}" DockPanel.Dock="Top" />
		<HeaderedContentControl  IsVisible="{Binding Profiles^.HasValue}"
                                 Header="Profiles" DockPanel.Dock="Top">
			<ComboBox Classes="FullWidth"
                      SelectedItem="{Binding SelectedProfile}"
                      DisplayMemberBinding="{Binding Name}"
                      ItemsSource="{Binding Profiles^.Value}" />
		</HeaderedContentControl>
		<ContentControl Content="{Binding Session}" />
	</StackPanel>
</UserControl>
