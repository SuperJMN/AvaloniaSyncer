<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaSyncer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSyncer.Views.PluginSelectionView"
             x:DataType="viewModels:PluginSelectionViewModel">
	<Border BorderBrush="Black" BorderThickness="1" Padding="4">
		<DockPanel>
			<TextBlock Margin="0 4" FontWeight="Black" Text="{Binding Name}" DockPanel.Dock="Top" />
			<ComboBox Classes="FullWidth" PlaceholderText="Select a plugin" DockPanel.Dock="Top"
                      ItemsSource="{Binding PluginFactories}" SelectedItem="{Binding SelectedPluginFactory}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<DockPanel>
							<Image Height="20" Source="{Binding Icon}" DockPanel.Dock="Left" />
							<TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
						</DockPanel>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<ContentControl Margin="0 8 0 0"
                            IsVisible="{Binding SelectedPlugin, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Content="{Binding SelectedPlugin}" />
		</DockPanel>
	</Border>
</UserControl>
