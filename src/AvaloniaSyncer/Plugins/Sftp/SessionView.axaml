             x:Class="AvaloniaSyncer.Plugins.Sftp.SessionView"
             x:DataType="seaweedFs:SessionViewModel">
	<StackPanel Spacing="8">
		<ContentControl Content="{Binding Configuration}" DockPanel.Dock="Top" />
		<DockPanel>
			<Button Content="â€¦" VerticalAlignment="Center" Margin="4 0" Command="{Binding BrowseFolder}" DockPanel.Dock="Right"  />
