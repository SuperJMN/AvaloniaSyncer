<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sftp="clr-namespace:AvaloniaSyncer.Plugins.Sftp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSyncer.Plugins.Sftp.SftpPluginView"
             x:CompileBindings="True"
             x:DataType="sftp:SftpPluginViewModel">
	<DockPanel>

		<DockPanel DockPanel.Dock="Top" Margin="0 0 0 8">

			<TextBlock Text="Profiles" DockPanel.Dock="Top" FontWeight="Bold" VerticalAlignment="Center" ></TextBlock>
            <ComboBox DockPanel.Dock="Top" PlaceholderText="Select items" HorizontalAlignment="Stretch"
                      DisplayMemberBinding="{Binding Name}"
                      ItemsSource="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}" />
		</DockPanel>

		<StackPanel Spacing="4">
			<TextBox Watermark="Host" Text="{Binding Host}" />
			<TextBox Watermark="Port" Text="{Binding Port}" />
			<TextBox Watermark="Username" Text="{Binding Username}" />
			<TextBox PasswordChar="*" Watermark="Password" Text="{Binding Password}" />
			<TextBox Watermark="Path" Text="{Binding Path}" />
		</StackPanel>

	</DockPanel>
</UserControl>
