<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sftp="clr-namespace:AvaloniaSyncer.Plugins.Sftp"
             xmlns:config="clr-namespace:AvaloniaSyncer.Plugins.Sftp.Config"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaSyncer.Plugins.Sftp.SftpView"
             x:CompileBindings="True"
             x:DataType="sftp:SftpPlugin">
    <StackPanel Spacing="4">
        <Expander Header="Profiles" HorizontalAlignment="Stretch">
            <config:ConfigView HorizontalAlignment="Stretch" DataContext="{Binding Config}" />
        </Expander>
        <TextBox Watermark="Host" Text="{Binding Host}" />
        <TextBox Watermark="Port" Text="{Binding Port}" />
        <TextBox Watermark="Username" Text="{Binding Username}" />
        <TextBox PasswordChar="*" Watermark="Password" Text="{Binding Password}" />
        <TextBox Watermark="Path" Text="{Binding Path}" />
    </StackPanel>
</UserControl>
